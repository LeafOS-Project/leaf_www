{% set currentDevice = app.request.attributes.get('_route_params').device|default('') %}

<aside>
  <h2>Devices</h2>
  <input type="text" id="device-search" placeholder="Search device">
  <ul>
    {% for vendor, devices in deviceVendors %}
      <li>
        <a href="#" class="vendor-dropdown" data-vendor="{{ vendor }}">
          <img class="icon" src="{{ asset('assets/images/svg/mobile.svg') }}" alt="" />
          <span style="font-weight: bold">{{ vendor }}</span>
          <span class="dropdown-arrow"></span>
        </a>
        <ul class="dropdown-menu" style="display: none;">
          {% for device in devices %}
            <li>
              <a href="{{ path('leaf_wiki_device', { device: device.codename }) }}" class="{{ device.codename == app.request.get('device') ? 'selected-device' : '' }}">
                {{ device.name }}
                <span style="font-size: 15px;">({{ device.codename }})</span>
              </a>
            </li>
          {% endfor %}
        </ul>
      </li>
    {% endfor %}
  </ul>
</aside>
